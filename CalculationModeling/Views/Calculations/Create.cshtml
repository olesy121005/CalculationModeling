@model CalculationModeling.Models.CalculationParameters

<h2>Новый расчёт</h2>

<div asp-validation-summary="All" class="text-danger mb-2"></div>
<span asp-validation-for="LayerHeightValue" class="text-danger"></span>

<div class="card p-4">
    <form method="post">
        <label>Название расчёта</label>
        <input asp-for="CalculationName" class="form-control" />

        <label>Высота слоя (м)</label>
        <input asp-for="LayerHeightValue" type="number" step="0.5" class="form-control" />

        <label>Начальная температура материала (°C)</label>
        <input asp-for="InitialMaterialTempValue" type="number" class="form-control" />

        <label>Начальная температура газа (°C)</label>
        <input asp-for="InitialGasTempValue" type="number" class="form-control" />

        <label>Скорость газа (м/с)</label>
        <input asp-for="GasVelocityValue" type="number" step="0.01" class="form-control" />

        <label>Теплоемкость газа</label>
        <input asp-for="GasHeatCapacityValue" type="number" step="0.01" class="form-control" />

        <label>Расход материала (кг/с)</label>
        <input asp-for="MaterialConsumptionValue" type="number" step="0.01" class="form-control" />

        <label>Теплоемкость материала</label>
        <input asp-for="MaterialHeatCapacityValue" type="number" step="0.01" class="form-control" />

        <label>Коэффициент теплоотдачи</label>
        <input asp-for="HeatTransferCoefficientValue" type="number" class="form-control" />

        <label>Диаметр аппарата (м)</label>
        <input asp-for="ApparatusDiameterValue" type="number" step="0.1" class="form-control" />

        <button class="btn btn-success mt-3">🧮 Рассчитать</button>
        <a class="btn btn-secondary mt-3" href="/Calculations">Назад</a>
    </form>
</div>
