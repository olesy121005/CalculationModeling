@model CalculationModeling.Models.CalculationParameters

<h2>Удаление расчёта</h2>

<div class="alert alert-warning">
    Вы уверены, что хотите удалить расчёт <b>@Model.CalculationName</b>?
</div>

<form method="post" action="/Calculations/DeleteConfirmed/@Model.Id">
    <button class="btn btn-danger">❌ Удалить</button>
    <a class="btn btn-secondary" href="/Calculations">Отмена</a>
</form>
